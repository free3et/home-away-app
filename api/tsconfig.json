{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true
    //"emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts" /* Виключення тестових файлів (якщо такі є) */
  ]
}
